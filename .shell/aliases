# Directory switching/listing related aliases.
alias ls="ls -G --group-directories-first --color=auto"
alias ll='ls -lhoGg --color=auto'
alias la="ls -a --color=auto"

# Ask for confirmation whenever we're (re)moving files.
alias rm="rm -i"
alias mv="mv -i"

# Have sudo understand aliases.
alias sudo="sudo "

# vim: syntax=sh
